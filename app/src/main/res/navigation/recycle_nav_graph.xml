<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.reciapp.user.presentation.views.fragments.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_pickup"
            app:destination="@id/nav_pickup" />
    </fragment>

    <fragment
        android:id="@+id/nav_pickup"
        android:name="com.reciapp.user.presentation.views.fragments.PickupFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_pickup" />
</navigation>
